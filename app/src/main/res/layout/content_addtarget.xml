<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tarikalovebird.money.AddTarget">

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom|center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/TypeMusic"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="20sp"
                android:layout_weight="0.3"
                android:background="@android:color/holo_orange_dark"
                app:srcCompat="@android:drawable/stat_sys_headset" />

            <ImageButton
                android:id="@+id/TypeCamera"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="20sp"
                android:layout_weight="0.3"
                android:background="@android:color/holo_orange_dark"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <ImageButton
                android:id="@+id/TypeLearn"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="20sp"
                android:layout_weight="0.3"
                android:background="@android:color/holo_orange_dark"
                app:srcCompat="@android:drawable/ic_menu_edit" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/TypeBook"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="20sp"
                android:layout_weight="0.3"
                android:background="@android:color/holo_orange_dark"
                app:srcCompat="@android:drawable/ic_dialog_map" />

            <ImageButton
                android:id="@+id/TypeTime"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="20sp"
                android:layout_weight="0.3"
                android:background="@android:color/holo_orange_dark"
                app:srcCompat="@android:drawable/ic_menu_recent_history" />

            <ImageButton
                android:id="@+id/TypeAdd"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_margin="20sp"
                android:layout_weight="0.3"
                android:background="@android:color/holo_orange_dark"
                app:srcCompat="@android:drawable/ic_input_add" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="ชื่อ"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="40sp"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/TargetName"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Target"/>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="ราคา"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/TargetPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:hint="00.00"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="บาท"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5sp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="จำนวนวัน"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/DayTargey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:hint="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="วัน"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.15"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/OkbuttonTarget"
                    android:layout_width="125sp"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:layout_margin="20sp"
                    android:background="@android:color/holo_blue_dark"
                    android:gravity="center"
                    android:text="ยืนยัน"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/CancelbuttonTarget"
                    android:layout_width="125sp"
                    android:layout_height="60sp"
                    android:layout_gravity="center"
                    android:layout_margin="20sp"
                    android:background="@android:color/holo_red_light"
                    android:gravity="center"
                    android:text="ยกเลิก"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </TableRow>

    </TableLayout>
</android.support.constraint.ConstraintLayout>
